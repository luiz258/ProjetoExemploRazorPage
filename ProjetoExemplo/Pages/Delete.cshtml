@page
@model ProjetoExemplo.Pages.DeleteModel
@{
}
@{
    ViewData["Title"] = "Deletar Produto";
}
<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-8">
        <input type="hidden" asp-for="produto.Id" />
        <div class="form-group">
            <input asp-for="produto.Nome" class="form-control" readonly />
        </div>

        <div class="form-group mt-2">
            <input type="number" asp-for="produto.Valor" class="form-control" readonly />
        </div>

        <form method="post">
            <div class="form-group mt-2">
                <input type="submit" value="Deletar" class="btn btn-danger" />
                <a class="btn btn" asp-page="Index">Voltar</a>
            </div>
        </form>
        
    </div>
</div>